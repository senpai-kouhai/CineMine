<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card border-0 shadow-lg">
        <div class="card-header bg-dark text-white text-center">
          <h2>新規登録</h2>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :username, class: 'control-label' %>
              <%= f.text_field :username, autofocus: true, autocomplete: "username", class: 'form-control rounded-pill' %>
            </div>

            <div class="form-group">
              <%= f.label :email, class: 'control-label' %>
              <%= f.email_field :email, autocomplete: "email", class: 'form-control rounded-pill' %>
            </div>

            <div class="form-group">
              <%= f.label :password, class: 'control-label' %>
              <% if @minimum_password_length %>
              <small class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</small>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control rounded-pill' %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, class: 'control-label' %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control rounded-pill' %>
            </div>

            <div class="form-group mt-4">
              <%= f.submit "新規登録", class: 'btn btn-dark btn-block rounded-pill' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  body {
  background-color: #f8f9fa;
}

.card {
  border-radius: 25px;
}

.form-control.rounded-pill {
  border-radius: 50px;
}

.btn.btn-dark.rounded-pill {
  border-radius: 50px;
}

h2 {
  font-weight: 500;
}
</style>