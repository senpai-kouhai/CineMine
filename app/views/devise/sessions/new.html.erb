<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card border-0 shadow-lg">
        <div class="card-header bg-dark text-white text-center">
          <h2>ログイン</h2>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :login, class: 'control-label' %>
              <%= f.text_field :login, autofocus: true, autocomplete: "username email", class: 'form-control rounded-pill', placeholder: "username or email" %>
            </div>

            <div class="form-group">
              <%= f.label :password, class: 'control-label' %>
              <%= f.password_field :password, autocomplete: "current-password", class: 'form-control rounded-pill' %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-group">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="form-group mt-4">
              <%= f.submit "ログイン", class: 'btn btn-dark btn-block rounded-pill' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  body {
  background-color: #f8f9fa;
}

.card {
  border-radius: 25px;
}

.form-control.rounded-pill {
  border-radius: 50px;
}

.btn.btn-dark.rounded-pill {
  border-radius: 50px;
}

h2 {
  font-weight: 500;
}
</style>