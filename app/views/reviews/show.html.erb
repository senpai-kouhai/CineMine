<div class="review-container">
  <h1><%= @review.user.username %>さんの<%= @review.movie.title %>のレビュー</h1>

  <div class="movie-poster">
    <% if @review.movie.poster_path %>
      <%= link_to movie_path(@review.movie.id) do %>
        <img src="https://image.tmdb.org/t/p/w500<%= @review.movie.poster_path %>" alt="<%= @review.movie.title %> poster">
      <% end %>
    <% else %>
      <p class="no-poster">No poster available</p>
    <% end %>
  </div>

  <div class="review-details text-center">
    <p>ストーリーの評価: <%= @review.story_rating %></p>
    <p><%= @review.story_comment %></p>
    <p>キャストの評価: <%= @review.cast_rating %></p>
    <p><%= @review.cast_comment %></p>
    <p>音楽の評価: <%= @review.music_rating %></p>
    <p><%= @review.music_comment %></p>
    <p>演出＆映像の評価: <%= @review.direction_rating %></p>
    <p><%= @review.direction_comment %></p>
  </div>

  <div class="text-right mt-4">
    <div id="like-button">
      <% like = current_user.likes.find_by(review_id: @review.id) %>
      <% if like %>
        <%= link_to movie_review_like_path(@review.movie, like, format: :js), method: :delete, remote: true do %>
          <i class="fa-solid fa-heart-crack"></i>
        <% end %>
      <% else %>
        <%= link_to movie_review_likes_path(@review.movie, @review, format: :js), method: :post, remote: true do %>
          <i class="fa-solid fa-heart"></i>
        <% end %>
      <% end %>
    </div>
    <p id="like_count"><%= @review.likes.count %> Likes</p>
  </div>
</div>


<style>
  body {
    background-color: #f8f9fa;
    font-family: Arial, sans-serif;
  }

  .review-container {
    max-width: 900px;
    margin: 50px auto;
    padding: 30px;
    background-color: #ffffff;
    border-radius: 5px;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
  }

  h1 {
    color: #343a40;
    font-size: 28px;
    font-weight: bold;
    margin-bottom: 30px;
    text-align: center;
  }

  .movie-poster {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 30px;
  }

  .movie-poster img {
    max-width: 100%;
    max-height: 400px;
    border-radius: 5px;
  }

  .no-poster {
    text-align: center;
    font-size: 14px;
    color: #6c757d;
    margin-bottom: 30px;
  }

  .review-details p {
    font-size: 16px;
    color: #6c757d;
    margin-bottom: 15px;
  }

  #like-button {
    display: inline-block;
    margin-right: 10px;
  }

  #like_count {
    display: inline-block;
  }

  #like-button a {
    color: #343a40;
    text-decoration: none;
    transition: color 0.3s;
  }

  #like-button a:hover {
    color: #dc3545;
  }

  .text-right {
    text-align: right;
  }

  .mt-4 {
    margin-top: 4px;
  }
</style>